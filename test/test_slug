#!/usr/bin/env bash
source $(dirname $0)/../lib/slug.sh

setUp() {
  export MARKDOWN=$(cat "$(dirname $0)/samples/1.md")
}

testMarkdownEnvVar() {
  assertTrue \
    "MARKDOWN is set" \
    "[[ -n \${MARKDOWN} ]]"

  assertEquals \
    "MARKDOWN has length" \
    '310' $(echo "${MARKDOWN}" | wc -c)
}

testHeading() {
  assertEquals \
    "The Heading" "$(fya_heading)"
}

testSlug() {
  assertEquals \
    "the-heading" "$(fya_slug 'The Heading')"
}

testFileName() {
  assertTrue \
    "has md extension" \
    '[[ "$(fya_filename "test")" =~ \.md$ ]]'

  assertTrue \
    "has date" \
    '[[ "$(fya_filename "test")" =~ ^[0-9]{8}- ]]'

  assertTrue \
    "has slug" \
    '[[ "$(fya_filename "test")" =~ test\.md ]]'
}

# load and run shUnit2
source $(dirname $0)/shunit/src/shunit2

# vim: ai ts=2 sw=2 et sts=2 ft=sh
